@{
    Layout = "Shared/_Layout.cshtml";
}

@if(@Model.Count == 0)
{
    <h1 class="center-align">We have no stylists available at this time</h1>
}
else
{
    <h1 class="center-align">Stylists Available</h1>
    @foreach(var stylist in Model)
    {
        <h3 class="center-align"><a href="/stylist/@stylist.GetId()">@stylist.GetName()</a></h3>
    }
}
